#include<stdio.h>
#include<ctype.h>

struct musica{
	char nome[100], estilo[100];
	int posicao;	
};
typedef struct musica Musica;

int cincomelhores()

int main(){
	int i, j, opcao, style;
	Musica a[10], troca;	
	
	for(i=0;i<10;i++){
		printf("Nome da musica:\t\t");
		gets(a[i].nome);
		printf("Estilo da musical:\t");
		gets(a[i].estilo );
		printf("Ranking:\t\t");
		scanf("%d", &a[i].posicao);
		printf("\n");
		getchar();
	}
		
	printf("1- 5 melhores no ranking.\n 2- 5 piores no ranking.\n 3- Lista por estilo.\n 4- lista em ordem alfabetica.\n Escolha uma opcao:\t");
	scanf("%d", &opcao);
	
	switch (opcao){
		case 1:
	
			printf("\nLista das 5  melhores:\n");
		
			for(i=0;i<10;i++){
				for(j=i+1;j<10;j++){
					if(a[i].posicao> a[j].posicao){
						troca = a[i];
						a[i] = a[j];
						a[j]=troca;					
					}		
				}
			}
			
			for(i=0;i<5;i++)
				printf("posicao %d : %s\n", a[i].posicao, a[i].nome); 
			
			break;
	
		case 2:
	
			printf("\nlista das 5 piores:\n");
	
			for(i=0;i<10;i++){
				for(j=i+1;j<10;j++){
					if(a[j].posicao> a[i].posicao){
						troca = a[j];
						a[j] = a[i];
						a[i]=troca;					
					}		
				}
			}
			
			for(i=0;i<5;i++)
				printf("posicao %d : %s\n", a[i].posicao, a[i].nome); 
				
			break;
				
		case 3:
			
			printf("\nlista por estilo:\n");
			
			for(i=0;i<10;i++){
				for(j=i+1;j<10;j++){
					style=strcmp(a[i].estilo,a[j].estilo);
					if(style=0){
						troca=a[j];
						a[j]=a[i];
						a[i]=troca;						
					}				
				}
			printf("%s: %s\n", a[i].estilo, a[i].nome);		
			}
						
			break;
			
		case 4:
			
			printf("\nlista em ordem alfabetica:\n");
			
			for(i=0;i<10;i++){
				for(j=i+1;j<10;j++){
					style=strcmp(a[i].nome,a[j].nome);
					if(style>0){
						troca=a[j];
						a[j]=a[i];
						a[i]=troca;
					}									
				}
			printf("%s\n", a[i].nome);	
			}
						
			break;						
	}
	return 0;
}
