#include <stdio.h>
#include <math.h>
#include <locale.h>

void bin_para_dec(){
	int bin, dec=0, i;
	
	setlocale(LC_ALL,"");
	
	printf ("Digite um número binário: ");
	scanf ("%d",&bin);
	
	for (i=0; bin>0; i++){
		dec = dec + pow(2,i)*(bin%10);
		bin = bin / 10;
	}
	
	printf ("Decimal: %d",dec);
}

void dec_para_bin(){

	int i=0, j, n, a[100];
	
	setlocale(LC_ALL,"");
	
	printf ("Digite um número decimal: ");
	scanf ("%d", &n);
	
	while (n > 0){
		a[i]  = n % 2;
		n /= 2;
		++i;
	}
	printf ("Binário: ");
	for (j = i-1; j>=0; --j){
		printf ("%d",a[j]);
	}
}

void Menu(){
	int opcao = 0;
	
	setlocale(LC_ALL,"");
	
	printf ("1 - Binário para Decimal\n");
	printf ("2 - Decimal para Binário\n");
	printf ("Opção: ");
	scanf ("%d",&opcao);
	printf ("\n");
	
	if (opcao==1){
		bin_para_dec();
	}
	else if (opcao==2){
		dec_para_bin();
		}
	else if (opcao != 1 && opcao !=2){
		printf ("Opção invalida...\n\n");
		Menu();
	}
	}
	int main (){
		Menu();
	}
