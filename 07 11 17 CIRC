#include <stdio.h>
#include <math.h>
#include <locale.h>

void bin_para_dec(){
	int bin, dec=0, i;
	
	setlocale(LC_ALL, "Portuguese");
	
	printf ("Digite um número binario: ");
	scanf ("%d",&bin);
	
	for (i=0; bin>0; i++){
		dec = dec + pow(2,i)*(bin%10);
		bin = bin / 10;
	}
	
	printf ("Decimal: %d",dec);
}

void dec_para_bin(){

	int num;
	char aux[50];
	
	setlocale(LC_ALL, "Portuguese");
	
	printf ("Digite um número decimal: ");
	scanf ("%d",&num);
	
	num = num / 2;
	
	printf ("Binario: %d",num);
}

void Menu(){
	int opcao = 0;
	
	setlocale(LC_ALL, "Portuguese");
	
	printf ("1 - Binario para Decimal\n");
	printf ("2 - Decimal para Binario\n");
	printf ("Opção: ");
	scanf ("%d",&opcao);
	printf ("\n");
	
	if (opcao==1){
		bin_para_dec();
	}
	else if (opcao==2){
		dec_para_bin();
		}
	else if (opcao != 1 && opcao !=2){
		printf ("Informe um opção valida...\n\n");
		Menu();
	}
	}
	int main (){
		Menu();
	}
