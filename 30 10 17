-- QUESTÃO 01 --

#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main (void){
	int i;
	char texto[200];
	char aux[200];
	
	printf ("Digite algo: ");
	fgets (texto, 200, stdin);
	
	for (i=0; i<200; i++){
		aux[i] = toupper(texto[i]);
	}
	printf ("\n%s", aux);
}

-- QUESTÃO 02 --

#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main (void){
	int i;
	char texto[200];
	char aux[200];
	
	printf ("Digite algo: ");
	fgets (texto, 200, stdin);
	
	for (i=0; i<200; i++){
		aux[i] = toupper(texto[i]);
		
		switch (texto[i]){
		case 'a': case 'e': case 'i': case 'o': case 'u':
		aux[i] = tolower(texto[i]); break;
		}
	}
	printf ("%s\n", aux);
}


-- QUESTÃO 03 --

#include <stdio.h>
#include <ctype.h>

int main (void){
	
	char textoA[1000];
	char textoB[1000];
	int comp;
	
	printf ("Digite algo para o TEXTO A: ");
	fgets (textoA, 1000, stdin);
	
	printf ("\nDigite algo para o TEXTO B: ");
	fgets (textoB, 1000, stdin);
	
	comp = strcmp(textoA, textoB);
	
	if (comp == 0)
	printf ("\nTextos de tamanho igual.");
	if (comp < 0)
	printf ("\nTexto A maior que Texto B.");
	if (comp > 0)
	printf ("\nTexto A menor que Texto B.");
}
